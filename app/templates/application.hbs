<div class="ui container">
  <div class="ui grid">    
    <div class="row">
      <div class="four wide column">
        Welcome to EmberNote
      </div>
      
      <div class="twelve wide column">
        {{#if user}}
          Hello, {{user.name}}
        {{/if}}
        {{#unless user}}
          {{#link-to 'register'}}register{{/link-to}} &nbsp;
          {{link-to login 'login'}}
        {{/unless}}
      </div>
    </div>
    
    <div class="row">
      <div>
        {{outlet}}
      </div>
    </div>
  </div>
</div>
